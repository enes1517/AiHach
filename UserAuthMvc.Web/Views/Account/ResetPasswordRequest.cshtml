@model ResetPasswordRequestViewModel
@{
    ViewData["Title"] = "Şifre Sıfırlama İsteği";
}
<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0 animate__animated animate__fadeInUp floating-animation">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="display-1 text-warning pulse-animation mb-3">
                        <i class="bi bi-key"></i>
                    </div>
                    <h2 class="fw-bold mb-2 text-warning">Şifremi Unuttum</h2>
                    <p class="text-muted">Kayıtlı e-posta adresinizi girin, size sıfırlama bağlantısı gönderelim.</p>
                </div>
                
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-@ViewBag.MessageType alert-dismissible fade show animate__animated animate__shakeX" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        @ViewBag.Message
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                
                <form asp-action="ResetPasswordRequest" method="post">
                    <div class="mb-4">
                        <label class="form-label">
                            <i class="bi bi-envelope me-2"></i>E-posta Adresi
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="bi bi-envelope text-muted"></i>
                            </span>
                            <input asp-for="Email" class="form-control border-start-0" placeholder="ornek@email.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-warning w-100 mb-3 pulse-animation">
                        <i class="bi bi-send me-2"></i>Sıfırlama Linki Gönder
                    </button>
                </form>
                
                <div class="text-center">
                    <div class="position-relative mb-3">
                        <hr class="text-muted">
                        <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted">
                            <i class="bi bi-arrow-left"></i>
                        </span>
                    </div>
                    
                    <a asp-action="Login" class="link-primary fw-bold">
                        <i class="bi bi-arrow-left me-1"></i>Girişe Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form animasyonları
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.classList.add('animate__animated', 'animate__pulse');
            });
            
            input.addEventListener('blur', function() {
                this.parentElement.classList.remove('animate__animated', 'animate__pulse');
            });
        });
        
        // Başarı mesajı animasyonu
        const alertElement = document.querySelector('.alert');
        if (alertElement) {
            setTimeout(() => {
                alertElement.classList.add('animate__animated', 'animate__fadeOut');
                setTimeout(() => {
                    alertElement.remove();
                }, 1000);
            }, 5000);
        }
    </script>
} 